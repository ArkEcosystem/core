{
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "globals": {
    "requireFrom": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix",
      "windows"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "off",
      "always"
    ]
  }
}
