{
	"name": "@hapist/json-rpc",
	"version": "0.2.0",
	"description": "An implementation of the JSON-RPC 2.0 specification for building RPCs with hapi.js",
	"homepage": "https://github.com/hapist/json-rpc",
	"bugs": {
		"url": "https://github.com/hapist/json-rpc/issues"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:hapist/json-rpc.git"
	},
	"license": "MIT",
	"author": "Brian Faust <hello@basecode.sh>",
	"files": [
		"dist"
	],
	"main": "dist/index",
	"types": "dist/index",
	"scripts": {
		"build": "yarn clean && tsc",
		"build:watch": "yarn build -w",
		"clean": "rimraf .coverage dist tmp",
		"format": "yarn lint && yarn prettier",
		"lint": "tslint -c tslint.json 'src/**/*.ts' --fix",
		"prepublishOnly": "yarn format && yarn test && yarn build",
		"prettier": "prettier --write \"./*.{ts,js,json,md}\" \"./**/*.{ts,js,json,md}\"",
		"test": "jest",
		"test:watch": "jest --watchAll"
	},
	"jest": {
		"bail": true,
		"collectCoverage": true,
		"collectCoverageFrom": [
			"src/**/*.ts",
			"!src/config.ts",
			"!src/interfaces.ts",
			"!**/node_modules/**"
		],
		"coverageDirectory": "<rootDir>/.coverage",
		"coverageReporters": [
			"json",
			"lcov",
			"text",
			"clover",
			"html"
		],
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"node"
		],
		"setupFilesAfterEnv": [
			"jest-extended"
		],
		"testEnvironment": "node",
		"testMatch": [
			"**/*.test.ts"
		],
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"verbose": true
	},
	"dependencies": {
		"@hapi/boom": "^7.4.2",
		"@hapi/hapi": "^18.3.1",
		"@hapi/joi": "^15.0.3",
		"dlv": "^1.1.2",
		"dset": "^2.0.1",
		"media-type": "^0.3.1"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^0.3.0",
		"@types/boom": "^7.2.1",
		"@types/dlv": "^1.1.1",
		"@types/hapi": "^18.0.2",
		"@types/hapi__boom": "^7.4.0",
		"@types/hapi__hapi": "^18.2.1",
		"@types/hapi__joi": "^15.0.1",
		"@types/jest": "^24.0.13",
		"@types/node": "^12.0.1",
		"@types/prettier": "^1.16.4",
		"@types/rimraf": "^2.0.2",
		"ajv": "^6.10.0",
		"codecov": "^3.4.0",
		"jest": "^24.8.0",
		"jest-extended": "^0.11.1",
		"prettier": "^1.17.1",
		"rimraf": "^2.6.3",
		"ts-jest": "^24.0.2",
		"tslint": "^5.16.0",
		"tslint-config-prettier": "^1.18.0",
		"typescript": "^3.4.5"
	},
	"engines": {
		"node": ">=10.4"
	}
}
