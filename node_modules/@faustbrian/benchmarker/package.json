{
	"name": "@faustbrian/benchmarker",
	"version": "0.1.2",
	"description": "A wrapper around Benchmark.js that provides sane defaults and formatting",
	"main": "dist/index.js",
	"repository": "https://github.com/faustbrian/benchmarker",
	"author": "Brian Faust <hello@basecode.sh>",
	"license": "MIT",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsc",
		"build:watch": "tsc -w",
		"format": "yarn lint && yarn prettier",
		"lint": "tslint -c tslint.json 'src/**/*.ts' --fix",
		"prettier": "prettier --write \"./*.{ts,js,json,md}\" \"./**/*.{ts,js,json,md}\"",
		"test": "jest",
		"prepublish": "yarn format && yarn build"
	},
	"dependencies": {
		"benchmark": "^2.1.4"
	},
	"devDependencies": {
		"@types/benchmark": "^1.0.31",
		"@types/jest": "^23.3.10",
		"@types/node": "^10.12.18",
		"@types/prettier": "^1.15.2",
		"jest": "^23.6.0",
		"jest-extended": "^0.11.0",
		"prettier": "^1.15.3",
		"ts-jest": "^23.10.5",
		"tslint": "^5.11.0",
		"tslint-config-prettier": "^1.17.0",
		"typescript": "^3.2.1"
	}
}
