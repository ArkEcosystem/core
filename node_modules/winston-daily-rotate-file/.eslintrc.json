{
    "extends": [
        "eslint:recommended",
        "plugin:node/recommended"
    ],
    "env": {
        "node": true,
        "mocha": true
    },
    "rules": {
        "indent": ["error", 4],
        "camelcase": ["error", {
            "properties": "never"
        }],
        "node/no-unpublished-require": ["error", {
            "allowModules": ["chai", "rimraf", "moment"]
        }]
    }
}
