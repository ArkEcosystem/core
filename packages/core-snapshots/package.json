{
    "name": "@arkecosystem/core-snapshots",
    "version": "4.0.0-next.2",
    "description": "Provides live local streamed snapshots functionality for ARK Core",
    "license": "MIT",
    "contributors": [
        "Sebastijan Ku≈æner <sebastijan@ark.io>"
    ],
    "files": [
        "dist"
    ],
    "main": "dist/index",
    "types": "dist/index",
    "scripts": {
        "build": "pnpm clean && pnpm compile",
        "build:watch": "pnpm clean && pnpm compile -w",
        "build:docs": "../../node_modules/typedoc/bin/typedoc --out docs src",
        "clean": "rimraf dist",
        "compile": "node ../../node_modules/typescript/bin/tsc",
        "prepublishOnly": "pnpm build",
        "publish:next": "pnpm publish --access public --tag next --git-checks=false",
        "publish:latest": "pnpm publish --access public --git-checks=false"
    },
    "dependencies": {
        "@arkecosystem/core-database": "workspace:*",
        "@arkecosystem/core-kernel": "workspace:*",
        "@arkecosystem/crypto": "workspace:*",
        "bytebuffer": "5.0.1",
        "fs-extra": "8.1.0",
        "joi": "17.4.2",
        "msgpack-lite": "0.1.26",
        "ora": "4.1.1",
        "pg": "8.7.1",
        "pg-query-stream": "3.4.2",
        "pluralize": "8.0.0",
        "typeorm": "0.2.25",
        "xcase": "2.0.1"
    },
    "devDependencies": {
        "@arkecosystem/utils": "1.3.1",
        "@types/fs-extra": "8.1.2"
    },
    "engines": {
        "node": ">=10.x"
    },
    "publishConfig": {
        "access": "public"
    },
    "arkecosystem": {
        "core": {
            "alias": "snapshots"
        }
    }
}
