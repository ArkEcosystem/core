        "bytebuffer": "^5.0.1",
        "fs-extra": "^8.1.0",
        "msgpack-lite": "^0.1.26",
        "pg-query-stream": "^3.0.4",
        "pluralize": "^8.0.0",
        "xcase": "^2.0.1",
        "zlib": "^1.0.5"
    },
    "devDependencies": {
        "@types/fs-extra": "^8.0.1"
    },
    "engines": {
        "node": ">=10.x"
    },
    "publishConfig": {
        "access": "public"
    },
    "arkecosystem": {
        "core": {
