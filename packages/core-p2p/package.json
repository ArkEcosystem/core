{
    "name": "@arkecosystem/core-p2p",
    "version": "4.0.0-next.21",
    "description": "P2P API for ARK Core",
    "license": "MIT",
    "contributors": [
        "François-Xavier Thoorens <fx@ark.io>",
        "Kristjan Košič <kristjan@ark.io>",
        "Brian Faust <brian@ark.io>",
        "Alex Barnsley <alex@ark.io>"
    ],
    "files": [
        "dist"
    ],
    "main": "dist/index",
    "types": "dist/index",
    "scripts": {
        "build": "pnpm clean && pnpm compile",
        "build:watch": "pnpm clean && pnpm compile -w",
        "build:docs": "../../node_modules/typedoc/bin/typedoc --out docs src",
        "pbjs": "pbjs -t static-module -w commonjs src/socket-server/codecs/proto/*.proto -o src/socket-server/codecs/proto/protos.js",
        "pbts": "pbts src/socket-server/codecs/proto/protos.js -o src/socket-server/codecs/proto/protos.d.ts",
        "build:proto": "pnpm pbjs && pnpm pbts",
        "clean": "rimraf dist",
        "compile": "node ../../node_modules/typescript/bin/tsc",
        "prepublishOnly": "pnpm build",
        "pretest": "bash ../../scripts/pre-test.sh",
        "publish:next": "pnpm publish --access public --tag next --git-checks=false",
        "publish:latest": "pnpm publish --access public --git-checks=false"
    },
    "dependencies": {
        "@arkecosystem/core-database": "workspace:*",
        "@arkecosystem/core-kernel": "workspace:*",
        "@arkecosystem/core-state": "workspace:*",
        "@arkecosystem/crypto": "workspace:*",
        "@hapi/boom": "10.0.0",
        "@hapi/bounce": "3.0.0",
        "@hapi/hapi": "20.2.2",
        "@hapi/hoek": "10.x.x",
        "@hapi/sntp": "4.0.0",
        "@hapi/teamwork": "6.0.0",
        "dayjs": "1.10.7",
        "delay": "4.4.1",
        "ip": "1.1.5",
        "ipaddr.js": "2.0.1",
        "joi": "17.4.2",
        "pluralize": "8.0.0",
        "pretty-ms": "7.0.1",
        "protobufjs": "6.11.3",
        "rate-limiter-flexible": "1.3.2",
        "semver": "6.3.0",
        "ws": "7.5.5"
    },
    "devDependencies": {
        "@types/better-sqlite3": "5.4.3",
        "@types/fs-extra": "8.1.2",
        "@types/hapi__hapi": "20.0.13",
        "@types/hapi__sntp": "3.1.2",
        "@types/ip": "1.1.0",
        "@types/semver": "6.2.3",
        "lodash.clonedeep": "4.5.0"
    },
    "engines": {
        "node": ">=10.x"
    },
    "publishConfig": {
        "access": "public"
    },
    "arkecosystem": {
        "core": {
            "alias": "p2p"
        }
    }
}
