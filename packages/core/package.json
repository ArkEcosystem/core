{
  "private": true,
  "name": "@arkecosystem/core",
  "description": "Core of the ARK Blockchain",
  "version": "0.0.1",
  "contributors": [
    "François-Xavier Thoorens <fx@ark.io>",
    "Kristjan Košič <kristjan@ark.io>",
    "Brian Faust <brian@ark.io>",
    "Alex Barnsley <alex@ark.io>"
  ],
  "license": "MIT",
  "bin": {
    "ark:start": "./bin/ark start",
    "ark:relay": "./bin/ark relay",
    "ark:forger": "./bin/ark forger",
    "ark:snapshot": "./bin/ark snapshot"
  },
  "scripts": {
    "start": "./bin/ark start",
    "start:mainnet": "./bin/ark start --config ../core-config/lib/networks/mainnet --network mainnet",
    "start:devnet": "./bin/ark start --config ../core-config/lib/networks/devnet --network devnet",
    "start:testnet": "ARK_ENV=test ./bin/ark start --config ../core-config/lib/networks/testnet --network testnet",
    "start:testnet:live": "./bin/ark start --config ../core-config/lib/networks/testnet.live --network testnet",
    "relay": "./bin/ark relay",
    "relay:mainnet": "./bin/ark relay --config ../core-config/lib/networks/mainnet --network mainnet",
    "relay:devnet": "./bin/ark relay --config ../core-config/lib/networks/devnet --network devnet",
    "relay:testnet": "ARK_ENV=test ./bin/ark relay --config ../core-config/lib/networks/testnet --network testnet",
    "relay:testnet:live": "./bin/ark relay --config ../core-config/lib/networks/testnet.live --network testnet",
    "forger": "./bin/ark forger",
    "forger:mainnet": "./bin/ark forger --config ../core-config/lib/networks/mainnet --network mainnet",
    "forger:devnet": "./bin/ark forger --config ../core-config/lib/networks/devnet --network devnet",
    "forger:testnet": "ARK_ENV=test ./bin/ark forger --config ../core-config/lib/networks/testnet --network testnet",
    "forger:testnet:live": "./bin/ark forger --config ../core-config/lib/networks/testnet.live --network testnet",
    "snapshot": "./bin/ark snapshot",
    "snapshot:mainnet": "./bin/ark snapshot --config ../core-config/lib/networks/mainnet --network mainnet",
    "snapshot:devnet": "./bin/ark snapshot --config ../core-config/lib/networks/devnet --network devnet",
    "snapshot:testnet": "./bin/ark snapshot --config ../core-config/lib/networks/testnet --network testnet",
    "snapshot:testnet:live": "./bin/ark snapshot --config ../core-config/lib/networks/testnet.live --network testnet",
    "full:testnet": "ARK_ENV=test ./bin/ark start --config ../core-config/lib/networks/testnet --network testnet --network-start",
    "full:testnet:live": "./bin/ark start --config ../core-config/lib/networks/testnet.live --network testnet --network-start",
    "full:testnet:2tier:2": "ARK_ENV=test ./bin/ark start --config ../core-config/lib/networks/testnet.2 --network testnet --network-start",
    "full:testnet:2tier:1": "ARK_ENV=test ./bin/ark start --config ../core-config/lib/networks/testnet.1 --network testnet --network-start",
    "full:testnet:2tier": "ARK_ENV=test ./bin/ark start --config ../core-config/lib/networks/testnet.1 --network testnet --network-start && ./bin/ark start --config ../core-config/lib/networks/testnet.2 --network testnet --network-start",
    "lint": "eslint ./ --fix",
    "depcheck": "depcheck ./"
  },
  "dependencies": {
    "@arkecosystem/client": "^0.0.1",
    "@arkecosystem/core-api": "^0.0.1",
    "@arkecosystem/core-blockchain": "^0.0.1",
    "@arkecosystem/core-config": "^0.0.1",
    "@arkecosystem/core-config-json": "^0.0.1",
    "@arkecosystem/core-database": "^0.0.1",
    "@arkecosystem/core-database-sequelize": "^0.0.1",
    "@arkecosystem/core-forger": "^0.0.1",
    "@arkecosystem/core-graphql": "^0.0.1",
    "@arkecosystem/core-graphql-api": "^0.0.1",
    "@arkecosystem/core-json-rpc": "^0.0.1",
    "@arkecosystem/core-logger": "^0.0.1",
    "@arkecosystem/core-logger-winston": "^0.0.1",
    "@arkecosystem/core-p2p": "^0.0.1",
    "@arkecosystem/core-transaction-pool": "^0.0.1",
    "@arkecosystem/core-transaction-pool-redis": "^0.0.1",
    "@arkecosystem/core-webhooks": "^0.0.1",
    "@arkecosystem/core-webhooks-api": "^0.0.1",
    "commander": "^2.15.1"
  }
}
