{
    "name": "@arkecosystem/core",
    "version": "4.0.0-next-1",
    "description": "Core of the ARK Blockchain",
    "license": "MIT",
    "contributors": [
        "François-Xavier Thoorens <fx@ark.io>",
        "Kristjan Košič <kristjan@ark.io>",
        "Brian Faust <brian@ark.io>",
        "Alex Barnsley <alex@ark.io>"
    ],
    "files": [
        "/bin",
        "/dist"
    ],
    "main": "dist/index",
    "types": "dist/index",
    "bin": {
        "ark": "./bin/run"
    },
    "scripts": {
        "ark": "node ./bin/run",
        "build": "pnpm clean && pnpm compile",
        "build:watch": "pnpm clean && pnpm compile -w",
        "build:docs": "../../node_modules/typedoc/bin/typedoc --out docs src",
        "clean": "rimraf dist",
        "compile": "node ../../node_modules/typescript/bin/tsc",
        "debug:forger": "node --inspect-brk ./bin/run forger:run",
        "debug:relay": "node --inspect-brk ./bin/run relay:run",
        "debug:core": "node --inspect-brk ./bin/run core:run",
        "core:devnet": "cross-env CORE_PATH_CONFIG=./bin/config/devnet pnpm ark core:run",
        "core:mainnet": "cross-env CORE_PATH_CONFIG=./bin/config/mainnet pnpm ark core:run",
        "core:testnet": "cross-env CORE_PATH_CONFIG=./bin/config/testnet pnpm ark core:run -- --env=test",
        "relay:devnet": "cross-env CORE_PATH_CONFIG=./bin/config/devnet pnpm ark relay:run",
        "relay:mainnet": "cross-env CORE_PATH_CONFIG=./bin/config/mainnet pnpm ark relay:run",
        "relay:testnet": "cross-env CORE_PATH_CONFIG=./bin/config/testnet pnpm ark relay:run -- --env=test",
        "forger:devnet": "cross-env CORE_PATH_CONFIG=./bin/config/devnet pnpm ark forger:run",
        "forger:mainnet": "cross-env CORE_PATH_CONFIG=./bin/config/mainnet pnpm ark forger:run",
        "forger:testnet": "cross-env CORE_PATH_CONFIG=./bin/config/testnet pnpm ark forger:run -- --env=test",
        "full:testnet": "cross-env CORE_PATH_CONFIG=./bin/config/testnet pnpm ark core:run -- --networkStart --env=test",
        "prepublishOnly": "pnpm build",
        "publish:next": "pnpm publish --access public --tag next --git-checks=false",
        "publish:latest": "pnpm publish --access public --git-checks=false"
    },
    "dependencies": {
        "@arkecosystem/core-api": "workspace:*",
        "@arkecosystem/core-blockchain": "workspace:*",
        "@arkecosystem/core-cli": "workspace:*",
        "@arkecosystem/core-database": "workspace:*",
        "@arkecosystem/core-forger": "workspace:*",
        "@arkecosystem/core-kernel": "workspace:*",
        "@arkecosystem/core-logger-pino": "workspace:*",
        "@arkecosystem/core-magistrate-api": "workspace:*",
        "@arkecosystem/core-magistrate-transactions": "workspace:*",
        "@arkecosystem/core-p2p": "workspace:*",
        "@arkecosystem/core-snapshots": "workspace:*",
        "@arkecosystem/core-state": "workspace:*",
        "@arkecosystem/core-transaction-pool": "workspace:*",
        "@arkecosystem/core-transactions": "workspace:*",
        "@arkecosystem/core-webhooks": "workspace:*",
        "@arkecosystem/crypto": "workspace:*",
        "@arkecosystem/utils": "1.3.0",
        "argon2": "0.28.2",
        "bip39": "3.0.4",
        "boxen": "5.1.2",
        "dayjs": "1.10.7",
        "env-paths": "2.2.1",
        "envfile": "5.2.0",
        "execa": "3.4.0",
        "fs-extra": "8.1.0",
        "got": "11.8.2",
        "joi": "17.4.2",
        "kleur": "4.1.4",
        "module-alias": "2.2.2",
        "ngrok": "3.4.1",
        "prompts": "2.4.0",
        "tar": "6.1.11",
        "type-fest": "0.21.3",
        "wif": "2.0.6"
    },
    "devDependencies": {
        "cross-env": "7.0.3"
    },
    "peerDependencies": {
        "pm2": "^4.5.0"
    },
    "engines": {
        "node": ">=10.x"
    },
    "publishConfig": {
        "access": "public"
    },
    "_moduleAliases": {
        "@arkecosystem/core": ".",
        "@arkecosystem/core-api": "@arkecosystem/core-api",
        "@arkecosystem/core-blockchain": "@arkecosystem/core-blockchain",
        "@arkecosystem/core-cli": "@arkecosystem/core-cli",
        "@arkecosystem/core-database": "@arkecosystem/core-database",
        "@arkecosystem/core-forger": "@arkecosystem/core-forger",
        "@arkecosystem/core-kernel": "@arkecosystem/core-kernel",
        "@arkecosystem/core-logger-pino": "@arkecosystem/core-logger-pino",
        "@arkecosystem/core-magistrate-api": "@arkecosystem/core-magistrate-api",
        "@arkecosystem/core-magistrate-transactions": "@arkecosystem/core-magistrate-transactions",
        "@arkecosystem/core-p2p": "@arkecosystem/core-p2p",
        "@arkecosystem/core-snapshots": "@arkecosystem/core-snapshots",
        "@arkecosystem/core-state": "@arkecosystem/core-state",
        "@arkecosystem/core-transaction-pool": "@arkecosystem/core-transaction-pool",
        "@arkecosystem/core-webhooks": "@arkecosystem/core-webhooks",
        "@arkecosystem/crypto": "@arkecosystem/crypto"
    }
}
