{
    "name": "@arkecosystem/core-magistrate-api",
    "version": "4.0.0-next.20",
    "description": "Magistrate API for ARK Core",
    "license": "MIT",
    "contributors": [
        "Brian Faust <brian@ark.io>",
        "Joshua Noack <joshua@ark.io>"
    ],
    "files": [
        "dist"
    ],
    "main": "dist/index",
    "types": "dist/index",
    "scripts": {
        "build": "pnpm clean && pnpm compile",
        "build:watch": "pnpm clean && pnpm compile -w",
        "build:docs": "../../node_modules/typedoc/bin/typedoc --out docs src",
        "clean": "rimraf dist",
        "compile": "node ../../node_modules/typescript/bin/tsc",
        "prepublishOnly": "pnpm build",
        "pretest": "bash ../../scripts/pre-test.sh",
        "publish:next": "pnpm publish --access public --tag next --git-checks=false",
        "publish:latest": "pnpm publish --access public --git-checks=false"
    },
    "dependencies": {
        "@arkecosystem/core-api": "workspace:*",
        "@arkecosystem/core-kernel": "workspace:*",
        "@arkecosystem/core-magistrate-crypto": "workspace:*",
        "@arkecosystem/core-magistrate-transactions": "workspace:*",
        "@arkecosystem/crypto": "workspace:*",
        "@hapi/boom": "9.1.4",
        "@hapi/hapi": "20.2.1",
        "joi": "17.4.2"
    },
    "devDependencies": {
        "@types/hapi__boom": "7.4.1",
        "@types/hapi__hapi": "20.0.9",
        "@types/hapi__joi": "17.1.7"
    },
    "engines": {
        "node": ">=10.x"
    },
    "publishConfig": {
        "access": "public"
    },
    "arkecosystem": {
        "core": {
            "alias": "magistrate-api"
        }
    }
}
