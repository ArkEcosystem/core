{
    "name": "@arkecosystem/core-magistrate-api",
    "version": "3.0.0-alpha.9",
    "description": "Magistrate API for ARK Core",
    "license": "MIT",
    "contributors": [
        "Brian Faust <brian@ark.io>",
        "Joshua Noack <joshua@ark.io>"
    ],
    "files": [
        "dist"
    ],
    "main": "dist/index",
    "types": "dist/index",
    "scripts": {
        "build": "yarn run clean && yarn run compile",
        "build:watch": "yarn run clean && yarn run compile -w",
        "build:docs": "typedoc --out docs src",
        "clean": "del dist",
        "compile": "tsc",
        "prepublishOnly": "yarn run build",
        "pretest": "bash ../../scripts/pre-test.sh"
    },
    "dependencies": {
        "@arkecosystem/core-api": "workspace:packages/core-api",
        "@arkecosystem/core-kernel": "workspace:packages/core-kernel",
        "@arkecosystem/core-magistrate-crypto": "workspace:packages/core-magistrate-crypto",
        "@arkecosystem/core-magistrate-transactions": "workspace:packages/core-magistrate-transactions",
        "@hapi/boom": "^9.0.0",
        "@hapi/hapi": "^19.0.0",
        "@hapi/joi": "^17.1.0"
    },
    "devDependencies": {
        "@types/hapi__boom": "^7.4.1",
        "@types/hapi__joi": "^17.0.0"
    },
    "engines": {
        "node": ">=10.x"
    },
    "publishConfig": {
        "access": "public"
    },
    "arkecosystem": {
        "core": {
            "alias": "magistrate-api"
        }
    }
}
