{
    "name": "@arkecosystem/core-cli",
    "version": "4.0.0-next.12",
    "description": "Core of the ARK Blockchain",
    "license": "MIT",
    "contributors": [
        "Brian Faust <brian@ark.io>"
    ],
    "files": [
        "/dist"
    ],
    "main": "dist/index",
    "types": "dist/index",
    "scripts": {
        "ark": "node ./bin/run",
        "build": "pnpm clean && pnpm compile",
        "build:watch": "pnpm clean && pnpm compile -w",
        "build:docs": "../../node_modules/typedoc/bin/typedoc --out docs src",
        "clean": "rimraf dist",
        "compile": "node ../../node_modules/typescript/bin/tsc",
        "prepublishOnly": "pnpm build",
        "publish:next": "pnpm publish --access public --tag next --git-checks=false",
        "publish:latest": "pnpm publish --access public --git-checks=false"
    },
    "dependencies": {
        "@arkecosystem/core-kernel": "workspace:*",
        "@arkecosystem/crypto": "workspace:*",
        "@arkecosystem/utils": "1.3.1",
        "boxen": "5.1.2",
        "cli-table3": "0.6.0",
        "dayjs": "1.10.7",
        "env-paths": "2.2.1",
        "envfile": "5.2.0",
        "execa": "3.4.0",
        "fast-levenshtein": "2.0.6",
        "fs-extra": "8.1.0",
        "glob": "7.1.7",
        "got": "11.8.2",
        "inversify": "5.1.1",
        "joi": "17.4.2",
        "kleur": "4.0.0",
        "latest-version": "5.1.0",
        "listr": "0.14.3",
        "nodejs-tail": "1.1.1",
        "ora": "4.1.1",
        "prompts": "2.4.0",
        "read-last-lines": "1.8.0",
        "reflect-metadata": "0.1.13",
        "semver": "6.3.0",
        "tar": "6.1.11",
        "type-fest": "0.21.3",
        "yargs-parser": "20.2.9"
    },
    "devDependencies": {
        "@types/fast-levenshtein": "0.0.2",
        "@types/fs-extra": "8.1.2",
        "@types/is-ci": "2.0.0",
        "@types/listr": "0.14.4",
        "@types/semver": "6.2.3",
        "@types/yargs-parser": "20.2.1"
    },
    "engines": {
        "node": ">=10.x"
    },
    "publishConfig": {
        "access": "public"
    }
}
