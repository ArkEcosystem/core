{
    "name": "@arkecosystem/core-api",
    "version": "3.0.0-alpha.9",
    "description": "Public API for ARK Core",
    "license": "MIT",
    "contributors": [
        "Kristjan Košič <kristjan@ark.io>",
        "Brian Faust <brian@ark.io>"
    ],
    "files": [
        "dist"
    ],
    "main": "dist/index",
    "types": "dist/index",
    "scripts": {
        "build": "yarn run clean && yarn run compile",
        "build:watch": "yarn run clean && yarn run compile -w",
        "build:docs": "typedoc --out docs src",
        "clean": "del dist",
        "compile": "tsc",
        "prepublishOnly": "yarn run build",
        "pretest": "bash ../../scripts/pre-test.sh"
    },
    "dependencies": {
        "@arkecosystem/core-database": "workspace:packages/core-database",
        "@arkecosystem/core-kernel": "workspace:packages/core-kernel",
        "@arkecosystem/core-transaction-pool": "workspace:packages/core-transaction-pool",
        "@arkecosystem/core-transactions": "workspace:packages/core-transactions",
        "@arkecosystem/crypto": "workspace:packages/crypto",
        "@hapi/boom": "^9.0.0",
        "@hapi/hapi": "^19.0.0",
        "@hapi/hoek": "^9.1.0",
        "@hapi/joi": "^17.1.0",
        "ajv": "^6.10.2",
        "ip": "^1.1.5",
        "nanomatch": "^1.2.13",
        "node-cache": "^5.0.2",
        "rate-limiter-flexible": "^1.1.6",
        "semver": "^6.3.0"
    },
    "devDependencies": {
        "@types/hapi__boom": "^7.4.1",
        "@types/hapi__joi": "^17.0.0",
        "@types/ip": "^1.1.0",
        "@types/semver": "^6.2.0"
    },
    "engines": {
        "node": ">=10.x"
    },
    "publishConfig": {
        "access": "public"
    },
    "arkecosystem": {
        "core": {
            "alias": "api"
        }
    }
}
